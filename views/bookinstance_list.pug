extends layout

block content
    h1.title= title

    ul
        each val in list
            li
                a(href=val.url) #{val.book.title} : #{val.imprint} 
                |- 
                if val.status== 'Available'
                    span.has-text-success #{val.status}
                else if val.status== 'Maintenance'
                    span.has-text-danger #{val.status}
                else
                    span.has-text-warning #{val.status}
                
                if val.status!= 'Avilable'
                    span    (Due: #{val.due_back_formatted} )

        else
            li There are no book copies in this library.